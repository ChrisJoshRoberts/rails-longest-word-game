<div class="container">
  <h4 class="mt-3" style="text-align: center;">Try to make the longest word using each of these letters once!</h4>
  <ul class="list-inline text-center">
    <% @letters.each do |l| %>
      <li class="list-inline-item m-3 px-3 py-2 bg-info rounded text-white bold"><%= l %></li>
    <% end %>
  </ul>
  <form action="/score" method="" data-turbo="false" class="form-group col-10">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label class="form-label" for="word">Enter your word</label>
    <div class="d-flex align-items-center">
      <input type="text" name="word" value="<%=params[:word] %> "class="form-control">
      <input type="submit" value="submit" class="btn btn-primary my-3">
      </div>
  </form>
</div>
